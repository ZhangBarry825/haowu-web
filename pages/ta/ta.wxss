}
.content .item .item-content .content-pic .three .imageThree {
  height: 220rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-pic .four {
  margin-top: 5rpx;
  width: 35%;
  height: 230rpx;
}
.content .item .item-content .content-pic .four .imageFour {
  height: 230rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-pic .more {
  margin-top: 5rpx;
  width: 33%;
  height: 230rpx;
}
.content .item .item-content .content-pic .more .imageMore {
  height: 230rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-text {
  box-sizing: border-box;
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  max-height: 220rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.content .item .bottom {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content .item .bottom .address {
  font-size: 25rpx;
  color: #66afc3;
}
.content .item .bottom .info {
  color: gray;
  font-size: 25rpx;
}
.bar {
  background-color: white;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid gainsboro;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.bar .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bar .left .pic {
  width: 50rpx;
  height: 50rpx;
  background-position: center center;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.bar .left .text {
  color: gray;
  text-align: center;
  font-size: 25rpx;
}
.bar .middle {
  width: 150rpx;
}
.bar .middle .pic {
  position: absolute;
  top: -35rpx;
  width: 150rpx;
  height: 150rpx;
  background-position: center center;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.bar .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.bar .right .pic {
  margin: 0;
  width: 50rpx;
  height: 50rpx;
  background-position: center center;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.bar .right .text {
  margin: 0;
  padding: 0;
  color: #ff7170;
  text-align: center;
  font-size: 25rpx;
}
.function {
  margin-top: 20rpx;
}
.function .weui-cell__hd .pic {
  margin-right: 15rpx;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}
