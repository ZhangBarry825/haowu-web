page {
  border-top: 0.5px solid gainsboro;
  background-color: #f2f2f2;
}
page::-webkit-scrollbar {
  display: none;
}
.hr {
  width: 100%;
  content: " ";
  transform: scaleY(0.5);
  border-bottom: 1px solid #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
}
.info {
  background-color: white;
}
.info .item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  padding-bottom: 0;
}
.info .item-top .item-top-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.info .item-top .item-top-info .name-info {
  margin-left: 20rpx;
}
.info .item-top .item-top-info .name-info .name {
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.info .item-top .item-top-info .name-info .name .sex {
  width: 50rpx;
  height: 50rpx;
  background-position: center center;
  background-size: 100% 100%;
}
.info .item-top .item-top-info .name-info .address {
  font-size: 30rpx;
  color: gray;
}
.info .item-top .item-top-info .pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-position: center center;
  background-size: 100%;
}
.info .item-top .item-top-type {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.info .item-top .item-top-type .item-top-pic {
  margin-left: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background-position: center center;
  background-size: 100%;
}
.info .num {
  padding-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 30rpx;
  padding-left: 165rpx;
}
.info .num .goods {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.info .num .comments {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.info .num .publish {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.info .num .text {
  line-height: 20rpx;
  font-size: 23rpx;
  color: gray;
}
.info .num .num {
  padding: 0;
}
.toggle {
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 35rpx;
  padding-top: 20rpx;
}
.toggle .now {
  color: #ff7170;
  border-bottom: 2px solid #ff7170;
  padding-bottom: 10rpx;
}
.content {
  position: fixed;
  padding-bottom: 330rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}
.content .item:first-child {
  margin-top: 0;
}
.content view {
  background-color: white;
}
.content .item {
  margin-bottom: 20rpx;
  padding: 30rpx;
  padding-bottom: 10rpx;
}
.content .item .item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content .item .item-top .item-top-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content .item .item-top .item-top-info .name-info {
  margin-left: 20rpx;
  font-size: 35rpx;
}
.content .item .item-top .item-top-info .name-info .time {
  font-size: 27rpx;
  color: gray;
}
.content .item .item-top .item-top-info .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-position: center center;
  background-size: 100%;
}
.content .item .item-top .item-top-type {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.content .item .item-top .item-top-type .item-top-pic {
  margin-left: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background-position: center center;
  background-size: 100%;
}
.content .item .item-content .content-pic {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.content .item .item-content .content-pic .one {
  width: 100%;
}
.content .item .item-content .content-pic .one .imageOne {
  width: 100%;
}
.content .item .item-content .content-pic .two {
