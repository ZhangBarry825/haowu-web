/* pages/home/home.wxss */
page {
  margin: 0;
  padding: 0;
  background-color: #f1f1f1 ;
}
page::-webkit-scrollbar {
  display: none;
}
.hr {
  z-index: 0;
  width: 100%;
  content: " ";
  transform: scaleY(0.5);
  border-bottom: 1px solid #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
}
.toggle {
  z-index: 1;
  position: fixed;
  top: 0;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 35rpx;
  padding-top: 20rpx;
}
.toggle .now {
  color: #ff7170;
  border-bottom: 2px solid #ff7170;
  padding-bottom: 10rpx;
}
.content {
  position: fixed;
  width: 100%;
  height: 100%;
  margin-top: 90rpx;
  background-color: #f1f1f1;
  padding-bottom: 90rpx;
  box-sizing: border-box;
}
.content .item:first-child {
  margin-top: 0;
}
.content view {
  background-color: white;
}
.content .item {
  margin-bottom: 20rpx;
  padding: 30rpx;
  padding-bottom: 10rpx;
}
.content .item .item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content .item .item-top .item-top-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content .item .item-top .item-top-info .name-info {
  margin-left: 20rpx;
  font-size: 35rpx;
}
.content .item .item-top .item-top-info .name-info .time {
  font-size: 27rpx;
  color: gray;
}
.content .item .item-top .item-top-info .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-position: center center;
  background-size: 100%;
}
.content .item .item-top .item-top-type {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.content .item .item-top .item-top-type .item-top-pic {
  margin-left: 40rpx;
  width: 60rpx;
  height: 60rpx;
  background-position: center center;
  background-size: 100%;
}
.content .item .item-content .content-pic {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.content .item .item-content .content-pic .one {
  width: 100%;
}
.content .item .item-content .content-pic .one .imageOne {
  width: 100%;
}
.content .item .item-content .content-pic .two {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 300rpx;
  width: 50%;
}
.content .item .item-content .content-pic .two .imageTwo {
  height: 300rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-pic .three {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 220rpx;
  width: 33%;
}
.content .item .item-content .content-pic .three .imageThree {
  height: 220rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-pic .four {
  margin-top: 5rpx;
  width: 35%;
  height: 230rpx;
}
.content .item .item-content .content-pic .four .imageFour {
  height: 230rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-pic .more {
  margin-top: 5rpx;
  width: 33%;
  height: 230rpx;
}
.content .item .item-content .content-pic .more .imageMore {
  height: 230rpx;
  width: 100%;
  background-position: center center;
  background-size: cover;
  margin-left: 5rpx;
  background-repeat: no-repeat;
}
.content .item .item-content .content-text {
  box-sizing: border-box;
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  max-height: 220rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.content .item .bottom {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content .item .bottom .address {
  font-size: 25rpx;
  color: #66afc3;
}
.content .item .bottom .info {
  color: gray;
  font-size: 25rpx;
}
