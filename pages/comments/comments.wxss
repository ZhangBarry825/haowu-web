/* pages/home/home.wxss */
page {
  margin: 0;
  padding: 0;
  background-color: #f1f1f1;
}
page::-webkit-scrollbar {
  display: none;
}
.hr {
  z-index: 0;
  width: 100%;
  content: " ";
  transform: scaleY(0.5);
  border-bottom: 1px solid #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
}
.toggle {
  z-index: 1;
  position: fixed;
  top: 0;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 35rpx;
  padding-top: 20rpx;
}
.toggle .now {
  color: #ff7170;
  border-bottom: 2px solid #ff7170;
  padding-bottom: 20rpx;
}
.content {
  position: fixed;
  width: 100%;
  height: 100%;
  margin-top: 105rpx;
  padding-bottom: 105rpx;
  box-sizing: border-box;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.content .item-box {
  background-color: white;
}
.content .item-box .item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}
.content .item-box .item .left {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.content .item-box .item .left .pic {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background-position: center center;
  background-size: 100% 100%;
}
.content .item-box .item .left .info {
  margin-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content .item-box .item .left .info .top {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 30rpx;
  color: gray;
}
.content .item-box .item .left .info .top .sex {
  width: 50rpx;
  height: 50rpx;
  background-position: center center;
  background-size: 100% 100%;
}
.content .item-box .item .left .info .bottom {
  font-size: 30rpx;
  color: gray;
}
.content .item-box .item .right {
  width: 120rpx;
  height: 120rpx;
  background-position: center center;
  background-size: 100% 100%;
}
